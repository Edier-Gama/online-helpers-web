---
import '@fontsource-variable/inter'
import '@fontsource/ubuntu'
import '@fontsource/poppins'
import '@fontsource-variable/edu-nsw-act-cursive';
import '@fontsource-variable/montserrat'
import '@fontsource-variable/onest';
import LinkButton from "../components/LinkButton.astro";
import { Image } from 'astro:assets';

---


<main class="flex m-4 p-4 animate-fade-in-up">
	<section class="flex flex-col w-6xl">
		<section class="mt-20 z-10">
			<h2 class="text-5xl font-bold max-w-xl">Work from home Anywhere. Your Dream Job Awaits</h2>
		</section>
		<section class="flex flex-col mt-30 max-w-2xl">
			 <p class="text-2xl max-w-3xl">Work for groundbreaking, innovative companies <br> from the comfort and safety of your own home with Online Helpers</p>
			<section class="mt-10 flex gap-4">
				<LinkButton href="/apply" content="Apply now"></LinkButton>
				<LinkButton href="/apply" content="About Us"></LinkButton>
			</section>
		</section>
	</section>
	<section class="mt-20 relative z-10">
		<img src="../../public/remote-work.png" alt="" class="mb-20 animate-zoom-i hover:scale-105 transition-transform duration-300"/>
	</section>
</main>	


<style>
  h1 {
	font-family: 'Onest Variable';
	line-height: -4;
	color:#f6e201
  }
  h2 {
	font-family: 'Onest Variable';
	color: rgb(0, 0, 0);
	font-weight: 800;
	height: 55px;
}
  p {
	font-family: 'Onest Variable';
	color: #000000;
  }
  h3 {
	font-family: 'Edu NSW ACT Cursive Variable';
	color: #000000;

}
  
</style>