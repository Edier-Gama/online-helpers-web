---
import '@fontsource-variable/onest'
const {svg, upText, downText} = Astro.props;
---

<section>
<div class="animate-fade-in-up card flex flex-col justify-center items-center gap-4 p-4 m-4 z-1 hover:scale-105 transition-transform duration-300">
    <h1 class="z-1 text-xl">{upText}</h1>
    <h2 class="text-3xl font-bold">{downText}</h2>
    <img src={svg} alt="" class="z-1 w-20"/>
</div>
</section>

<style>
.card {
  width: 190px;
  height: 254px;
  background: #07182E;
  position: relative;
  display: flex;
  place-content: center;
  place-items: center;
  overflow: hidden;
  border-radius: 20px;
}
.card h1 {
  z-index: 1;
  color: black;
  font-family: 'Onest Variable';
  height: 15px;
}
.card h2 {
  z-index: 1;
  color: black;
  font-family: 'Onest Variable';
  height: 50px;
}

.card::before {
  content: '';
  position: absolute;
  width: 100px;
  background-image: linear-gradient(180deg, #f6e201, #ff02d1);
  height: 130%;
  animation: rotBGimg 3s linear infinite;
  transition: all 0.2s linear;
}

@keyframes rotBGimg {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.card::after {
  content: '';
  position: absolute;
  background: #ffffff;
  ;
  inset: 5px;
  border-radius: 15px;
}  

</style>